<html t:type="layout" xmlns:t="http://tapestry.apache.org/schema/tapestry_5_1_0.xsd" xmlns:p="tapestry:parameter">

	<t:if t:test="firstAccess">
		<section id="first-access" class="radied-box">
			<h1>Thank you for creating your account on Wooki !</h1>
			<p>
				Welcome to Wooki, now you have created your account,
				you will be able to create new Book and collaborate with other Wooki users.
				Simply fill the 'Book Title' field and click on 'Create Book' to create your first book.
			</p>
		</section>
	</t:if>

	<section id="author-feed" class="activity-feed radied-box">
		<h1>${user.username}'s books</h1>
		<div>
			<form t:type="form" t:id="createBookForm">
				<p class="label">
					<t:label t:for="bookTitle" />
				</p>
				<p>
					<input t:type="textfield" t:id="bookTitle" class="form-field" /> <t:submit class="small-active-button radied-box" t:value="Create" />
				</p>
			</form>
		</div>
        <ol>
			<t:loop source="userBooks" value="currentBook" t:empty="block:noBooks">
            	<li id="ent-${currentBook.id}">
            		<nav id="book-dashboard-nav">
            			<ul>
            				<li><a t:type="pagelink" t:page="book/index" t:context="currentBook.id">${currentBook.title}</a></li>
            				<li><a t:id="removeBook" class="delete-book-link" t:type="clickAndRemove" t:entityId="currentBook.id" title="Delete Book">Delete</a></li>
            			</ul>
            		</nav>
         		</li>
         	</t:loop>
       	</ol>
    </section>

	<t:block t:id="titleBlock">
		<div class="radied-box" id="dashboard-feed-title">
			<t:if test="showYours">
				<a t:type="eventlink" t:event="showCoAuthors" class=".active" t:zone="feedZone">News Feeds</a>
				<span><strong>Your Actions</strong></span>
				<p:else>
					<span><strong>News Feeds</strong></span>
					<a t:type="eventlink" t:event="showUser" class=".active" t:zone="feedZone">Your Actions</a>
				</p:else>
			</t:if>
		</div>
	</t:block>

	<t:zone id="feedZone">
		<t:delegate to="feed" />
	</t:zone>

	<t:block id="coAuthor">
		<t:activity.feed t:type="co_author" t:userId="user.id" t:client="my-action-feeds" t:titleBlock="titleBlock" />
	</t:block>

	<t:block id="yourActivity">
		<t:activity.feed t:type="user" t:userId="user.id" t:client="my-action-feeds" t:titleBlock="titleBlock" />
	</t:block>

	<t:block id="noBooks">
    	<li>No books available</li>
    </t:block>

</html>
