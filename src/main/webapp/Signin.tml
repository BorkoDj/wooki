<html t:type="layout" xmlns:t="http://tapestry.apache.org/schema/tapestry_5_1_0.xsd" xmlns:p="tapestry:parameter">
    
    	<form name="loginForm" class="full-content big-form" id="loginForm" action="/wooki/j_spring_security_check" method="POST">
    		<h1>Log on wooki</h1>
    		<div class="radied-box basic-content">
	    		<table>
	    			<tr>
	    				<th><label class="username" for="j_username">Username</label></th>
	    				<td><input class="username" name="j_username" type="text" maxlength="30" /></td>
	    			</tr>
	    			<tr>
	    				<th><label class="password" for="j_password">Password</label></th>
	    				<td><input class="password" name="j_password" type="password" maxlength="30" /><small><a href="#">Forgot</a></small></td>
	    			</tr>
	    		</table>
				<div id="submit">
					<a href="javascript:$('loginForm').submit();" class="radied-box active-button">Signin</a>
				</div>
				<div class="form-footer"></div>
			</div>
    	</form>


</html>
