<html t:type="layout" xmlns:t="http://tapestry.apache.org/schema/tapestry_5_1_0.xsd" xmlns:p="tapestry:parameter">
    
	<div class="section">

		<h2>Log on wooki</h2>

    	<form name="loginForm" class="full-form" id="loginForm" action="${loginUrl}" method="POST">
    		<div class="radied-box basic-content">
	    		<t:if test="failed">
	    			<t:errors t:messages="messages" />
	    		</t:if>
	    		<table>
	    			<tr>
	    				<th><label class="username" for="j_username">Username</label></th>
	    				<td><input class="username" name="j_username" type="text" maxlength="30" /></td>
	    				<td></td>
	    			</tr>
	    			<tr>
	    				<th><label class="password" for="j_password">Password</label></th>
	    				<td><input class="password" name="j_password" type="password" maxlength="30" /></td>
	    				<td><small><a href="#">Forgot</a></small></td>
	    			</tr>
	    		</table>
				<div class="form-submit">
					<input type="submit" class="btn-active" value="signup" /> or <a href="#" t:type="pagelink" t:page="index">cancel</a>
				</div>
			</div>
    	</form>
    	
    	<div class="form-footer" />

    </div>


</html>
