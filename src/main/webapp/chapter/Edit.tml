<html t:type="booklayout"
	xmlns:t="http://tapestry.apache.org/schema/tapestry_5_1_0.xsd"
	xmlns:p="tapestry:parameter" t:title="Tapestry 5 : When development meet Art">

<div class="entry-content">
	<header>
	<h2 class="entry-title"><a href="#" rel="bookmark" title="Permalink to this PAGE">${chapter?.title}</a></h2>
	</header> 
	
	<div class="clearer" />
	
	<form t:type="form" t:id="editChapterForm" t:autofocus="false">
		<fieldset>
			<input t:type="textarea" t:id="data" t:mixins="wymeditor" />
		</fieldset>
		<fieldset>
			<div class="left"><t:submit t:id="update"  t:type="submit" t:event="update" class="wymupdate small-active-button radied-box" style="border:0px !important" value="update" /></div>
			<div class="left"><t:submit t:id="publish" t:type="submit" t:event="publish" class="wymupdate small-active-button radied-box" style="border:0px !important" value="publish" /></div>
			<div class="left"><a t:id="cancel" t:type="eventlink" t:event="cancel" class="small-active-button radied-box" style="border:0px !important" value="cancel">Cancel</a></div>			
		</fieldset>
	</form>
	
</div>

</html>
