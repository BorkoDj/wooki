<html t:type="booklayout"
	xmlns:t="http://tapestry.apache.org/schema/tapestry_5_1_0.xsd"
	xmlns:p="tapestry:parameter" t:title="prop:book?.title" t:bookId="book?.id">

	<h1><a href="#" t:type="pagelink" t:page="book/index" t:context="book?.id">${book?.title}</a></h1>
	
	<h2 class="entry-title"><a href="#" rel="bookmark" title="Permalink to this PAGE">${chapter?.title}</a></h2>
	
	<form t:type="form" t:id="editChapterForm" t:autofocus="false">
		<fieldset>
			<input t:type="textarea" t:id="data" t:mixins="wymeditor" />
		</fieldset>
		<fieldset>
			<div class="left"><t:submit t:id="update"  t:type="submit" t:event="update" class="wymupdate small-active-button radied" style="border:0px !important" value="update" /></div>
			<div class="left"><t:submit t:id="publish" t:type="submit" t:event="publish" class="wymupdate small-active-button radied" style="border:0px !important" value="publish" /></div>
			<div class="right"><t:submit t:id="cancel"  t:type="submit" t:event="cancel" class="wymupdate small-active-button radied" style="border:0px !important" value="cancel" /></div>
		</fieldset>
	</form>

</html>
