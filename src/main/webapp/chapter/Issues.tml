<html t:type="layout"
	xmlns:t="http://tapestry.apache.org/schema/tapestry_5_1_0.xsd"
	xmlns:p="tapestry:parameter" t:title="prop:book?.title" t:bookId="book?.id">

	<div class="feed section shadowed wrapper">
		<h1><a href="#" t:type="pagelink" t:page="book/index" t:context="bookId">Tapestry 5 : When development meet art</a></h1>
		<h2><a href="#" t:type="pagelink" t:page="chapter/index" t:context="ChapterCtx">Installation</a></h2>
		<ul>
			<t:loop t:source="comments" t:value="current" t:index="loopIdx" t:empty="block:noComments">
				<li class="${style}">
					By <a href="#" t:type="pagelink" t:page="index" t:context="${current.user.username}">${current.user.username}</a> 2 days ago. <a href="#" t:type="pagelink" t:page="chapter/index" t:context="revisionCtx" title="current.id">See revision</a>
					<blockquote>${current.content}</blockquote>
				</li>				
			</t:loop>
		</ul>
	</div>

	<t:block t:id="noComments">
		<li>No comments</li>
	</t:block>

</html>
